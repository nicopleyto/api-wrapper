
<div class="mx-auto shrink max-w-lg border space-y-5 p-5 rounded-xl shadow-md">
    <%= link_to "Connect a Twitter account", "/auth/twitter", method: :post, class: "inline-block px-3 py-2 rounded-xl bg-blue-500 text-white shadow-md hover:bg-blue-600" %>

    <% @twitter_accounts.each do |account| %>
        <div class="md:flex md:items-center shadow-md max-w-sm border rounded-xl p-6 justify-between">
            <div class="shrink-0 flex items-center space-x-2">
                <%= image_tag account.image, class: "rounded-full" %>
                <%= link_to "@#{account.username}", "https://twitter.com/#{account.username}", target: :_blank, class: "text-blue-500 font-semibold hover:text-blue-600"  %>
            </div>
            <div class="flex flex-row-reverse">
                <%= link_to "Disconnect", account, method: :delete, data: { confirm: "Are you sure?" }, class: "px-3 py-2 rounded-xl bg-red-600 text-white shadow-md hover:bg-red-700 text-sm" %>
            </div>
        </div>
    <% end %>
</div>