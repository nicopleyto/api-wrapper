<% if notice %>
    <div class="flex mx-auto my-6 items-center justify-center py-2 px-1 border rounded-lg bg-white w-full max-w-md shadow-sm">
        <h5 class="font-semibold text-center space-x-2">
            <i class="bi bi-check-circle-fill text-blue-500"></i> <span><%= notice %></span>
        </h5>
    </div>
<% end %>

<% if alert %>
    <div class="flex mx-auto my-6 items-center justify-center py-2 px-1 border rounded-lg bg-white w-full max-w-md shadow-sm">
        <h5 class="font-semibold text-center space-x-2">
            <i class="bi bi-exclamation-circle text-red-600"></i><span><%= alert %></span>
        </h5>
    </div>
<% end %>