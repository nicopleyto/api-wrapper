<div class="mx-auto shrink max-w-3xl p-5 rounded-xl">
    <% if current_user.twitter_accounts.any? %>
        <%= link_to 'Schedule a Tweet', new_tweet_path, class: "inline-block px-3 py-2 rounded-xl bg-blue-500 text-white shadow-md hover:bg-blue-600 mb-2" %>
    <% elsif current_user.twitter_accounts.none? %>
        <%= link_to 'Connect a Twitter account', "/auth/twitter", method: :post, class: "inline-block px-3 py-2 rounded-xl bg-blue-500 text-white shadow-md hover:bg-blue-600 mb-2" %>
    <% end %>

    <%= render @tweets %>
</div>