<h1>Tweets#index</h1>
<p>Find me in app/views/tweets/index.html.erb</p>

<div class="mx-auto shrink max-w-lg space-y-5 p-5 rounded-xl">
    <% if current_user.twitter_accounts.any? %>
        <%= link_to 'Schedule a Tweet', new_tweet_path %>
    <% elsif current_user.twitter_accounts.none? %>
        <%= link_to 'Connect a Twitter account', "/auth/twitter", method: :post, class: "inline-block px-3 py-2 rounded-xl bg-blue-500 text-white shadow-md hover:bg-blue-600" %>
    <% end %>

    <%= render @tweets %>
</div>