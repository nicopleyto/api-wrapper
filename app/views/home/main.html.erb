<% if user_signed_in? %>
    <div class="mx-auto shrink max-w-xl p-5">
        <div class="bg-white border p-5 rounded-xl shadow-md">
            <h1 class="font-bold text-4xl text-gray-900 mb-2">Hello, <%=current_user.email.split('@').first%>!</h1>
            <p class="text-gray-900 mb-2">This is a web application made to connect to and explore Twitter API functionality using Ruby on Rails. </p>
            <% if current_user.twitter_accounts.none? %>
                <p class="text-gray-900 mb-5">To get started, please connect your twitter account.</p>
                <%= link_to " Connect Twitter", "/auth/twitter", method: :post, :class => "bi bi-twitter inline-block px-3 py-2 rounded-xl bg-blue-500 text-white shadow-md hover:bg-blue-600"%>
            <% elsif current_user.twitter_accounts.any? %>
                <p class="text-gray-900 mb-5">Schedule a tweet to get started!</p>
                <%= link_to ' Schedule a Tweet', new_tweet_path, class: "bi bi-twitter inline-block px-3 py-2 rounded-xl bg-blue-500 text-white shadow-md hover:bg-blue-600" %>
            <% end %>
        </div>
    </div>
<% else %>
    <section class="text-gray-600 body-font">
        <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
            <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
                <h6 class="font-bold uppercase text-blue-500 text-2xl"><i class="bi bi-egg-fill"></i> NP Twit App<h6>
                <h1 class="title-font sm:text-5xl text-4xl mb-4 font-bold text-gray-900">A way to express your ideas at your own time.</h1>
                <p class="mb-8 leading-relaxed">Schedule your tweets any day, any hour, any minute into the future. Sit back and relax while our application's background workers schedule your tweets for you. Sign up below to get started.</p>
                <div class="flex justify-center">
                    <%=link_to "Sign up", new_user_registration_path, class: "inline-flex text-white bg-blue-500 border-2 border-blue-500 py-2 px-6 focus:outline-none hover:bg-blue-600 rounded-lg text-lg" %>
                    <%=link_to "Login", new_user_session_path, class:"ml-4 inline-flex text-blue-500 bg-inherit border-2 border-blue-500 py-2 px-6 focus:outline-none hover:bg-blue-500 hover:text-white rounded-lg text-lg" %>
                </div>
            </div>
            <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
                <%# <img class="object-cover object-center rounded" alt="hero" src="https://dummyimage.com/720x600"> %>
                <%= render 'svg/birds' %>
            </div>
        </div>
    </section>

<% end %>